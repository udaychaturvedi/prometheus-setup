{% set prom_host = prometheus_bind_address.split(':')[0] %}
{% set prom_port = prometheus_bind_address.split(':')[1] %}

server {
    listen {{ nginx_proxy_listen }};

    location / {
    proxy_pass http://127.0.0.1:{{ prom_port }};
    proxy_http_version 1.1;

    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;

    # Allow HEAD requests (required by browsers and curl -I)
    proxy_set_header Content-Length "";
    proxy_pass_request_headers on;
    proxy_pass_request_body on;
}

}
