---
- name: Check if Prometheus already exists
  stat:
    path: "{{ prometheus_install_dir }}/prometheus"
  register: prometheus_binary

- name: Create Prometheus user and group
  user:
    name: "{{ prometheus_service_user }}"
    system: yes
    shell: /bin/false
    home: /nonexistent
    state: present

- name: Create Prometheus directories
  file:
    path: "{{ item }}"
    state: directory
    owner: "{{ prometheus_service_user }}"
    group: "{{ prometheus_service_group }}"
    mode: '0755'
  loop:
    - "{{ prometheus_install_dir }}"
    - "{{ prometheus_data_dir }}"
  when: not prometheus_binary.stat.exists

- name: Download Prometheus
  get_url:
    url: "https://github.com/prometheus/prometheus/releases/download/v{{ prometheus_version }}/prometheus-{{ prometheus_version }}.linux-amd64.tar.gz"
    dest: /tmp/prometheus.tar.gz
    mode: '0644'
  when: not prometheus_binary.stat.exists

- name: Extract Prometheus
  unarchive:
    src: /tmp/prometheus.tar.gz
    dest: /tmp
    remote_src: yes
  when: not prometheus_binary.stat.exists

- name: Copy prometheus binaries
  copy:
    src: "/tmp/prometheus-{{ prometheus_version }}.linux-amd64/prometheus"
    dest: "{{ prometheus_install_dir }}/prometheus"
    mode: '0755'
    remote_src: yes
  when: not prometheus_binary.stat.exists

- name: Copy promtool
  copy:
    src: "/tmp/prometheus-{{ prometheus_version }}.linux-amd64/promtool"
    dest: "{{ prometheus_install_dir }}/promtool"
    mode: '0755'
    remote_src: yes
  when: not prometheus_binary.stat.exists

- name: Copy consoles and console_libraries
  copy:
    src: "/tmp/prometheus-{{ prometheus_version }}.linux-amd64/consoles"
    dest: "{{ prometheus_install_dir }}/consoles"
    remote_src: yes
  when: not prometheus_binary.stat.exists

- name: Set ownership on Prometheus directories
  file:
    path: "{{ item }}"
    owner: "{{ prometheus_service_user }}"
    group: "{{ prometheus_service_group }}"
    recurse: yes
  loop:
    - "{{ prometheus_install_dir }}"
    - "{{ prometheus_data_dir }}"

- name: Render prometheus.yml
  template:
    src: prometheus.yml.j2
    dest: "{{ prometheus_install_dir }}/prometheus.yml"
    owner: "{{ prometheus_service_user }}"
    group: "{{ prometheus_service_group }}"
    mode: '0644'

- name: Install systemd unit for prometheus
  copy:
    dest: /etc/systemd/system/prometheus.service
    content: |
      [Unit]
      Description=Prometheus
      After=network.target

      [Service]
      User={{ prometheus_service_user }}
      Group={{ prometheus_service_group }}
      Type=simple
      ExecStart={{ prometheus_install_dir }}/prometheus --config.file={{ prometheus_install_dir }}/prometheus.yml --storage.tsdb.path={{ prometheus_data_dir }} --web.listen-address={{ prometheus_bind_address }}
      Restart=on-failure

      [Install]
      WantedBy=multi-user.target

- name: Ensure prometheus service enabled and started
  systemd:
    name: prometheus
    enabled: true
    state: started
    daemon_reload: yes

- name: Create Prometheus rules directory
  file:
    path: "/opt/prometheus/rules"
    state: directory
    owner: prometheus
    group: prometheus
    mode: "0755"

- name: Deploy failover alert rules
  template:
    src: "rules/failover.rules.yml.j2"
    dest: "/opt/prometheus/rules/failover.rules.yml"
    owner: prometheus
    group: prometheus
    mode: "0644"

- name: Reload Prometheus
  service:
    name: prometheus
    state: restarted
      

# Deploy failover alert rules
- name: Deploy failover alert rules
  template:
    src: failover.rules.j2
    dest: "{{ prometheus_install_dir }}/rules/failover.rules.yml"
    owner: "{{ prometheus_service_user }}"
    group: "{{ prometheus_service_group }}"
    mode: "0644"
  notify: Restart prometheus
